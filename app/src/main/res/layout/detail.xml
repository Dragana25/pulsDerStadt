<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:src="@drawable/aposto_neu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:id="@+id/imageView2"
                android:src="@drawable/aposto_karte_neu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Aposto Karlsruhe GmbH"
                android:id="@+id/textView10"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:linksClickable="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="30dp"
                    android:text="Service"
                    android:id="@+id/textView"
                    android:typeface="normal"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <RatingBar

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:background="@color/cardview_shadow_end_color"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="30dp"
                    android:text="Wartezeit"
                    android:id="@+id/textView2"
                    android:textSize="20dp"
                    android:typeface="normal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="30dp"
                    android:text="AtmosphÃ¤re"
                    android:id="@+id/textView3"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar3"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="30dp"
                    android:text="Besuchermenge"
                    android:id="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Kommentare"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="4"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView4"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                  android:src="@drawable/kvolker" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Volker Vollgas"
                    android:id="@+id/textView8"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;Der absolute Hammer!&quot;"
                    android:id="@+id/textView9"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginLeft="10dp" />
            </GridLayout>


        </LinearLayout>
    </ScrollView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            android:layout_gravity="right"
            android:src="@drawable/plus" />
    </GridLayout>

</LinearLayout>
